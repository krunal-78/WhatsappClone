<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/sentMessage"
        android:maxWidth="300dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/sent_message"
        android:background="@drawable/sent_message"
        android:paddingTop="8dp"
        android:paddingRight="10dp"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp"
        android:textColor="#212121"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        />
    <ImageView
        android:id="@+id/emojiReactSent"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintRight_toLeftOf="@id/sentMessage"
        app:layout_constraintBottom_toBottomOf="@id/sentMessage"
        app:layout_constraintTop_toTopOf="@id/sentMessage"
        app:layout_constraintLeft_toLeftOf="@id/sentMessage"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        />
</androidx.constraintlayout.widget.ConstraintLayout>